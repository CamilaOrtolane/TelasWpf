        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="540"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Border Background="#FFF">
                <Border.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Border.Resources>
            </Border>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <StackPanel Margin="20">
                <TextBlock Foreground="#7D808C" Text="Nome" FontFamily="OpenSans" FontSize="20" FontWeight="Black" Margin="10,-25">

                </TextBlock>
                <TextBox Background="#7D808C" Height="20" Width="495" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3">

            <StackPanel Margin="20,0">

                <TextBlock Foreground="#7D808C" Text="RG" FontFamily="OpenSans" FontSize="20" FontWeight="Black" RenderTransformOrigin="3,1"/>

                <TextBox Background="#7D808C" Height="20" Width="160" HorizontalAlignment="Left" >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

            </StackPanel>

            <StackPanel Margin="20, 0">
                <TextBlock Foreground="#7D808C" Text="CPF" FontFamily="OpenSans" FontSize="20" FontWeight="Black" Margin="230, 0"/>
                <TextBox Background="#7D808C" Height="21" Width="280" HorizontalAlignment="Right">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="4">
            <StackPanel Margin="20,0">

                <TextBlock Foreground="#7D808C" Text="Estado civil" FontFamily="OpenSans" FontSize="20" FontWeight="Black" RenderTransformOrigin="3,1"/>

                <TextBox Background="#7D808C" Height="20" Width="180" HorizontalAlignment="Left" >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

            </StackPanel>

            <StackPanel Margin="30, 0">
                <TextBlock Foreground="#7D808C" Text="Data de Nascimento" FontFamily="OpenSans" FontSize="20" FontWeight="Black" Height="24" Width="200" Margin="225, 0"/>

