<Window x:Class="TelasWpf.TelasCadastro.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelasWpf.TelasCadastro"
        mc:Ignorable="d"
        Title="MenuPrincipal" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#004aad">
                
            </Grid>

            <Grid Grid.Column="0" Grid.RowSpan="2" Background="#004aad">
                <StackPanel Margin="-10,20">
                    <Button x:Name="logoHome" BorderBrush="Transparent" Background="Transparent">
                        <Image Source="/images/menu.png"></Image>
                    </Button>
                </StackPanel>

                <StackPanel Margin="-10,80">
                    <Button x:Name="servico" BorderBrush="Transparent" Background="Transparent">
                        <Image Source="/images/servico.png"></Image>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
